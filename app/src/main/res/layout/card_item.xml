<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="15dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/cardArgollaId"
    app:cardCornerRadius="15dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="match_parent">


      <ImageView
          android:id="@+id/imgEnamoro"
          android:layout_width="180dp"
          android:layout_height="180dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.148"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1.0"
          tools:srcCompat="@tools:sample/avatars" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <TextView
              android:id="@+id/txtcodigo"
              android:layout_width="108dp"
              android:layout_height="48dp"
              android:textColor="#000000"
              android:gravity="right"
              android:text="Codigo"
              android:textSize="18sp"
              android:textStyle="italic"
              app:layout_constraintEnd_toEndOf="@+id/txtDescripcion"
              app:layout_constraintHorizontal_bias="0.54"
              app:layout_constraintStart_toStartOf="@+id/txtDescripcion"
              tools:ignore="MissingConstraints"
              tools:layout_editor_absoluteY="16dp" />

          <TextView
              android:id="@+id/txtDescripcion"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:text="Argolla 6mm 10 Kilates"
              android:textSize="18sp"
              android:textStyle="italic"
              android:textColor="#000000"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@+id/imgEnamoro"
              tools:ignore="MissingConstraints"
              tools:layout_editor_absoluteY="81dp" />

          <TextView
              android:id="@+id/txtPeso"
              android:layout_width="102dp"
              android:layout_height="37dp"
              android:gravity="right"
              android:text="P.P: 2.0 gr"
              android:textColor="#000000"
              android:textSize="18sp"
              android:textStyle="italic"
              app:layout_constraintEnd_toEndOf="@+id/txtDescripcion"
              app:layout_constraintHorizontal_bias="0.575"
              app:layout_constraintStart_toStartOf="@+id/txtDescripcion"
              tools:ignore="MissingConstraints"
              tools:layout_editor_absoluteY="134dp" />
      </LinearLayout>


  </LinearLayout>




</androidx.cardview.widget.CardView>